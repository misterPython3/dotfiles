general {
    markup = "pango"
    colors = true
    interval = 1
    color_separator = "#E4A9FC"
}

order += "tztime localdate"
order += "tztime localtime"


tztime localdate  {
    format = "<span foreground='#F4E0FF' size='12.5pt' background='#D078D03A'> %Y, %B %d, %A </span>"
}
tztime localtime {
    format = "<span foreground='#F4E0FF' size='12.5pt' background='#D078D03A'> %I:%M:%S %p </span>"
}
