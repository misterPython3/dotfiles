#
floating_modifier $mod
tiling_drag modifier titlebar

# exec keybinds

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause 
bindsym XF86AudioPrev exec --no-startup-id playerctl prev
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym Shift+XF86AudioPlay exec --no-startup-id playerctl stop
bindsym Shift+XF86AudioPrev exec --no-startup-id playerctld unshift
bindsym Shift+XF86AudioNext exec --no-startup-id playerctld shift
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%

bindsym $mod+Shift+d exec --no-startup-id ~/.config/rofi/launch-scripts/theme-selector.sh

#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+t exec alacritty
bindsym $mod+Shift+t exec alacritty -e tmux
bindsym $mod+n exec ~/.cargo/bin/neovide
bindsym $mod+d exec --no-startup-id rofi -no-lazy-grab -application-fallback-icon "/usr/share/icons/Adwaita/scalable/categories/applications-system-symbolic.svg" -show drun
bindsym $mod+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym $mod+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png
# restart polybar
bindsym $mod+Shift+p exec --no-startup-id ~/.config/polybar/launch.sh
bindsym $mod+Mod1+Shift+p exec --no-startup-id polybar-msg cmd restart
bindsym $mod+b exec --no-startup-id polybar-msg cmd toggle
# randomize wallpaper
bindsym $mod+Shift+w exec --no-startup-id ~/.config/i3/scripts/random_wallpaper.sh ~/.config/i3/wallpapers/

